<h2>Show Garage</h2>

<p>Garage name: <%= @garage.name %></p>
<p>Gragae theme: <%= @garage.theme %></p>
<p>Garage details: <%= @garage.details %></p>

<p><%= link_to 'Show cars in this garage', show_garage_path(:garage_id => @garage.id) %></p>

<% if @garage.user_id == @current_user.id %>
	<p><%= link_to 'Move a car into this garage', move_path(:garage_id => @garage.id) %></p>
	<p><%= link_to 'Move a car out of this garage', moveout_path(:garage_id => @garage.id) %></p>
	<p><%= link_to 'Edit garage', edit_garage_path %></p>
	<p><%= link_to 'Delete garage', @car, :method => :delete, :data => {:confirm => 'Are you sure?'}%></p>
<% end %>
