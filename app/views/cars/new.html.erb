<h2>New Car</h2>

<%= form_for @car do |f| %>

<p>
	<%= f.label :name, 'Car name' %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :make, 'Car make' %>
	<%= f.text_field :make %>
</p>
<p>
	<%= f.label :model, 'Car model' %>
	<%= f.text_field :model %>
</p>
<p>
	<%= f.label :year, 'Year of manufacture' %>
	<%= f.text_field :year %>
</p>
<p>
	<%= f.label :colour, 'Colour' %>
	<%= f.text_field :colour %>
</p>
<p>
	<%= f.label :body_type, 'Body type' %>
	<%= f.text_field :body_type %>
</p>
<p>
	<%= f.label :engine, 'Engine details' %>
	<%= f.text_field :engine %>
</p>
<p>
	<%= f.label :transmisison, 'Transmission details' %>
	<%= f.text_field :transmisison %>
</p>
<p>
	<%= f.label :wheels_tyres, 'Wheel and tyre details' %>
	<%= f.text_field :wheels_tyres %>
</p>
<p>
	<%= f.label :other_details, 'Other details' %>
	<%= f.text_field :other_details %>
</p>
<p>
	<%= f.label :primary_picture, 'Primary picture' %>
	<%= f.file_field :primary_picture %>
</p>

<button>Create</button>

<% end %>