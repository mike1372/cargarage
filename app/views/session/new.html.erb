<h1>Login</h1>

<%= form_tag '/login' do %>

<p><%= label_tag :username %></p>
<p><div class="darken_text"><%= text_field_tag :username %></div></p>

<p><%= label_tag :password %>
<p><div class="darken_text"><%= password_field_tag :password %></div></p>

<button class="btn btn-success">Login</button>

<% end %>